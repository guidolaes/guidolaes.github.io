//- layout.pug
include ../config/config
block config
doctype html
html(lang="es")
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title #{siteName} ❤️

    // Css Bootstrap
    link(rel="stylesheet" href="css/app.css")
    link(rel="stylesheet" href="css/prism.css")
    link(rel="stylesheet" href="css/bootstrapicons.css")
    link(rel="stylesheet" href="css/custom.css")

    block styles
  body

    include ../includes/navbar

    include ../includes/header

    block content

    include ../includes/footer

    //- Portfolio Modals
    include ../modals/portfolio-modal-1.pug
    include ../modals/portfolio-modal-2.pug
    include ../modals/portfolio-modal-3.pug
    include ../modals/portfolio-modal-4.pug
    include ../modals/portfolio-modal-5.pug
    include ../modals/portfolio-modal-6.pug
  
    // Js Bootstrap
    script(src='js/app.js')
    script(src='js/prism.js')
    script(src='js/custom.js')

    block scripts 